<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-3dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="320dp"
            android:layout_height="74dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:text="Live Traffic and Roadworks Information"
            android:textAlignment="center"
            android:textColor="#3052b6"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id = "@+id/text"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below ="@+id/text"
            android:layout_centerInParent="true"
            android:src = "@drawable/ac_logo"
            />

"

        <Button
            android:id="@+id/CurrentIncidentsBtn"
            android:layout_width="280dp"
            android:layout_height="101dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="250dp"
            android:elevation="0dp"
            android:text="Current Incidents"
            android:textAlignment="center"
            android:textColor="#3052b6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/PlannedRoadworksBtn"
            android:layout_width="280dp"
            android:layout_height="101dp"
            android:layout_alignTop="@+id/CurrentIncidentsBtn"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="335dp"
            android:layout_marginEnd="59dp"
            android:text="Planned Roadworks"
            android:textAlignment="center"
            android:textColor="#3052b6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/RoadworksBtn"
            android:layout_width="280dp"
            android:layout_height="101dp"
            android:layout_alignTop="@+id/CurrentIncidentsBtn"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="167dp"
            android:layout_marginEnd="57dp"
            android:text="Current Roadworks"
            android:textAlignment="center"
            android:textColor="#3052b6"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
