<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="76dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="324dp"
            android:scaleType="fitXY"
            android:src="@drawable/ac_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="0dp"
            android:text="Live Traffic and Roadworks Information"
            android:textAlignment="center"
            android:textColor="#3052b6"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/CurrentIncidentsBtn"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="155dp"
            android:elevation="0dp"
            android:text="Current Incidents"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/RoadworksBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/CurrentIncidentsBtn"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="280dp"
            android:layout_marginRight="85dp"
            android:text="Current Roadworks"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/PlannedRoadworksBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/CurrentIncidentsBtn"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="25dp"
            android:text="Planned Roadworks"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
